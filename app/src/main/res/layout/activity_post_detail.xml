<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/post_detail_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Username"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/post_detail_image_view"
        app:layout_constraintStart_toEndOf="@+id/post_detail_profile_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/post_detail_image_view"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_profile_image_view"
        tools:srcCompat="@tools:sample/backgrounds/scenic[18]" />

    <TextView
        android:id="@+id/post_detail_description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_image_view" />

    <TextView
        android:id="@+id/post_detail_timestamp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Timestamp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_image_view" />

    <ImageView
        android:id="@+id/post_detail_profile_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <TextView
        android:id="@+id/post_detail_comments_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="Comments"
        app:layout_constraintStart_toEndOf="@+id/post_detail_comment_icon"
        app:layout_constraintTop_toTopOf="@+id/post_detail_comment_icon" />

    <EditText
        android:id="@+id/post_detail_comment_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type your comment"
        android:inputType="textPersonName"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/post_detail_comments_tv"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_comments_tv" />

    <TextView
        android:id="@+id/post_detail_like_counter_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="0 Likes"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/post_detail_like_icon"
        app:layout_constraintStart_toEndOf="@+id/post_detail_like_icon"
        app:layout_constraintTop_toTopOf="@+id/post_detail_like_icon" />

    <ImageView
        android:id="@+id/post_detail_like_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_description_tv"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/post_detail_comment_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post_detail_like_icon"
        app:srcCompat="@drawable/ufi_comment" />

    <Button
        android:id="@+id/post_detail_comment_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="COMMENT"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/post_detail_comment_et"
        app:layout_constraintStart_toEndOf="@+id/post_detail_comment_et"
        app:layout_constraintTop_toTopOf="@+id/post_detail_comment_et" />

</androidx.constraintlayout.widget.ConstraintLayout>